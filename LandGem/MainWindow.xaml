<Window x:Class="LandGEM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LandGEM" 
        xmlns:UserControls="clr-namespace:LandGEM.Views.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="300" MinWidth="300" MinHeight="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Width="200" Height="40" Content="Create New Report" Command="{Binding OpenWindowCommand}"></Button>
        <Button Grid.Row="1" Width="200" Height="40" Content="Create From Existing Report"></Button>
        <Button Grid.Row="2" Width="200" Height="40" Content="View Existing Reports"></Button>

    </Grid>
</Window>
