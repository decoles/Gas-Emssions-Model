<UserControl x:Class="LandGEM.Views.UserControls.TextBoxWithButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LandGEM.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="250">
    <Grid>
        <TextBox x:Name="txtInput" Text="Name of New Report" VerticalContentAlignment="Center" FontSize="16" FontWeight="Light" BorderThickness="1"></TextBox>
        <Button x:Name="btnClear" Content="Submit" Width="70" HorizontalAlignment="Right"></Button>
    </Grid>
</UserControl>
